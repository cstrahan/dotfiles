# To dynamically source:
#   source "some-command args |"

source ~/.mutt/theme/custom.muttrc
set crypt_use_gpgme = yes
#source ~/.mutt/gpg.rc

  set askcc
unset confirmappend
  set delete
  set edit_headers
  set editor               = "vim +:silent+?^$"
  #set editor               = `echo \$EDITOR`
  set fast_reply
  set folder               = ~/mail
  set forward_format       = "Fwd: %s"
  set forward_quote
  set header_cache         = ~/.mutt/cache
unset help
  set include
  set index_format         ="%4C %Z %[%m/%d] %-15.15L %?M?(%3M)&     ? %s %> %?g?%g?"
  set mail_check           = 0
  set mailcap_path         = ~/.mutt/mailcap
unset mark_old
unset markers
  set mbox_type            = Maildir
  set menu_scroll
  set pager_context        = 5
  set pager_index_lines    = 10
  set pager_stop
  set pipe_decode
  set realname             = "Charles Strahan"
unset record
  set reply_to
unset ignore_list_reply_to
  set reverse_name
  set signature            = ~/.mutt/signature
  set sort                 = threads
  set sort_aux             = reverse-last-date-received
  set spoolfile            = "+decipher/INBOX"
  set status_chars         = " *%A"
  set status_format        = "───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"
  set strict_threads
  set thorough_search
  set tilde
  set timeout              = 3
  set tmpdir               = ~/.mutt/temp
  set sidebar_delim        = '│'
  set sidebar_width        = 20
  set sidebar_visible
  set nm_default_uri       = "notmuch://`echo $HOME`/mail"
unset virtual_spoolfile
  set pgp_sign_as          = 8489B5A5
  set pgp_use_gpg_agent
  set crypt_autosign
  set crypt_replyencrypt

ignore *
unignore from: to: cc: date: subject:
unhdr_order *
hdr_order from: to: cc: date: subject:

auto_view text/html
alternative_order text/plain text/enriched text/html

macro index \\\\ "<vfolder-from-query>"
bind index <left> sidebar-prev
bind index <right> sidebar-next
bind index <space> sidebar-open

folder-hook personal/* source ~/.mutt/accounts/personal
folder-hook decipher/* source ~/.mutt/accounts/decipher
source ~/.mutt/accounts/decipher

